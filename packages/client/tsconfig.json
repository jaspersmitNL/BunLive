{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": ["ESNext", "DOM"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "composite": true,
        "strict": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    }
}
